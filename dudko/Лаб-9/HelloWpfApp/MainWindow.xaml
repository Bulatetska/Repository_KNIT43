<Window x:Class="HelloWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вітання" Height="200" Width="350">

    <StackPanel Margin="20">
        <TextBlock Text="Введіть своє ім'я:" 
                   FontSize="16" 
                   Margin="0,0,0,10"/>

        <TextBox x:Name="NameInput"
                 FontSize="14"
                 Margin="0,0,0,10"/>

        <Button Content="Підтвердити"
                FontSize="14"
                Click="Button_Click"
                Margin="0,0,0,10"/>

        <TextBlock x:Name="GreetingText"
                   FontSize="16"
                   Foreground="DarkBlue"/>
    </StackPanel>
</Window>
