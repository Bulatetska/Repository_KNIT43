<Window x:Class="indz_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:indz_wpf"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="1000">
    <Window.Resources>
        <DataTemplate x:Key="bookTemplate">
            <StackPanel>
                <TextBlock FontSize="16" FontWeight="Bold" Text="{Binding Title}"></TextBlock>
                <TextBlock Text="{Binding Author}"></TextBlock>
                <TextBlock Text="{Binding YearPublished}"></TextBlock>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Name="grid" Focusable="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Column 0 - All Books -->

        <StackPanel Grid.Row="0" Grid.Column="0">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Text="All Books"></TextBlock>
            <TextBox Margin="4" Text="{Binding BooksFilter, UpdateSourceTrigger=PropertyChanged}" ></TextBox>
        </StackPanel>

        <ListBox Grid.Row="1" Grid.Column="0" Margin="4" ItemsSource="{Binding BooksView}" SelectedItem="{Binding SelectedBook}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="Bold" Text="{Binding Title}"></TextBlock>
                        <TextBlock Text="{Binding Author}"></TextBlock>
                        <TextBlock Text="{Binding YearPublished}"></TextBlock>
                        <TextBlock Text="{Binding Path=Borrower.Name, FallbackValue='Available', StringFormat='Borrowed by {0}'}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Column 1 - Users -->

        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Text="User"></TextBlock>
            <TextBox Margin="4" Text="{Binding UsersFilter, UpdateSourceTrigger=PropertyChanged}" ></TextBox>
        </StackPanel>

        <ListBox Grid.Row="1" Grid.Column="1" Margin="4" ItemsSource="{Binding UsersView}" SelectedItem="{Binding SelectedUser}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="Bold" Text="{Binding Name}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Column 2 - Borrowable Books -->

        <StackPanel Grid.Row="0" Grid.Column="2">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Text="Borrow Book"></TextBlock>
            <TextBox Margin="4" Text="{Binding BooksFilter, UpdateSourceTrigger=PropertyChanged}" ></TextBox>
        </StackPanel>

        <ListBox Grid.Row="1" Grid.Column="2" Margin="4" ItemTemplate="{StaticResource bookTemplate}" ItemsSource="{Binding BorrowableBooksView}" SelectedItem="{Binding SelectedBook}">
        </ListBox>

        <Button Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4" Padding="8 4" Command="{Binding BorrowBookCommand}">
            Borrow Book
        </Button>

        <!-- Column 3 - Returnable Books -->

        <StackPanel Grid.Row="0" Grid.Column="3">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Text="Return Book"></TextBlock>
            <TextBox Margin="4" Text="{Binding BooksFilter, UpdateSourceTrigger=PropertyChanged}" ></TextBox>
        </StackPanel>

        <ListBox Grid.Row="1" Grid.Column="3" Margin="4" ItemTemplate="{StaticResource bookTemplate}" ItemsSource="{Binding ReturnableBooksView}" SelectedItem="{Binding SelectedBook}">
        </ListBox>

        <Button Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4" Padding="8 4" Command="{Binding ReturnBookCommand}">
            Return Book
        </Button>
    </Grid>
</Window>
