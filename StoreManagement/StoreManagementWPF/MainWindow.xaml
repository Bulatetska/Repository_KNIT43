<Window x:Class="StoreManagementWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StoreManagementWPF.ViewModels"
        Title="Магазин"
        Height="450"
        Width="650">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock Text="{Binding Balance, StringFormat=Баланс: {0} грн}"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

            <TextBlock Text="Товари:"
                       FontWeight="Bold"/>

            <ListBox ItemsSource="{Binding Products}"
                     SelectedItem="{Binding SelectedProduct}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding Name}"/>
                            <Run Text=" | "/>
                            <Run Text="{Binding Price}"/>
                            <Run Text=" грн | "/>
                            <Run Text="{Binding Quantity}"/>
                            <Run Text=" шт"/>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Margin="10 0 0 0">
            <Button Content="Купити"
                    Height="35"
                    Margin="0 0 0 10"
                    Command="{Binding BuyCommand}"/>

            <TextBlock Text="Корзина:"
                       FontWeight="Bold"/>


            <ListBox ItemsSource="{Binding Cart}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding Name}"/>
                            <Run Text=" - "/>
                            <Run Text="{Binding Price}"/>
                            <Run Text=" грн"/>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
