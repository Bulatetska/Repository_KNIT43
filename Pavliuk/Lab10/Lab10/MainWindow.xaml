<Window x:Class="Lab10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="40"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Height" Value="40"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Grid.Column="0" ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=Title}"></TextBlock>
                        <TextBlock FontSize="18" Text="{Binding Path=Author}"></TextBlock>
                        <TextBlock FontSize="18" Text="{Binding Path=Year}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Command="{Binding AddCommand}">+</Button>
            <Button Command="{Binding RemoveCommand}" CommandParameter="{Binding SelectedBook}">-</Button>
        </StackPanel>
        <StackPanel Grid.Column="1" DataContext="{Binding SelectedBook}">
            <TextBlock Text="Chosen element"></TextBlock>
            <TextBlock Text="Name"></TextBlock>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <TextBlock Text="Author"></TextBlock>
            <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            
            <TextBlock Text="Year"></TextBlock>
            <TextBox Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"></TextBox>

        </StackPanel>
    </Grid>
</Window>
