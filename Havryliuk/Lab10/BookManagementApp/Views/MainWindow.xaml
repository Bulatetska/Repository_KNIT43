<Window x:Class="BookManagementApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер книг - WPF MVVM" 
        Height="600" 
        Width="800"
        MinHeight="500" 
        MinWidth="700"
        WindowStartupLocation="CenterScreen">
    
    
    <Window.Resources>
        <!-- Спрощені стилі для кнопок -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005a9e"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004275"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="UpdateButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#27ae60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текстового поля -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Стиль для списку -->
        <Style x:Key="BookListBox" TargetType="ListBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- DataTemplate для елементів списку -->
        <DataTemplate x:Key="BookItemTemplate">
            <Border Background="White" Padding="10" Margin="2" BorderThickness="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Author}" FontSize="12" Foreground="#666"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Year}" FontSize="12" Foreground="#666" Margin="10,0,0,0"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="📚 Менеджер книг" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   Foreground="#2c3e50"/>

        <!-- Основний контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва частина - список книг -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Список книг:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>
                
                <ListBox x:Name="BooksListBox"
                         Style="{StaticResource BookListBox}"
                         ItemsSource="{Binding Books}"
                         SelectedItem="{Binding SelectedBook}"
                         ItemTemplate="{StaticResource BookItemTemplate}"
                         Height="300"/>
                
                <!-- Кнопки управління -->
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Left">
                    <Button Content="➕ Додати книгу" 
                            Style="{StaticResource ActionButton}"
                            Command="{Binding AddBookCommand}"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="🗑️ Видалити книгу" 
                            Style="{StaticResource DeleteButton}"
                            Command="{Binding DeleteBookCommand}"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="✏️ Оновити книгу" 
                            Style="{StaticResource UpdateButton}"
                            Command="{Binding UpdateBookCommand}"/>
                </StackPanel>
            </StackPanel>

            <!-- Права частина - форма редагування -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Інформація про книгу:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>
                
                <!-- Форма введення -->
                <StackPanel>
                    <TextBlock Text="Назва книги:" 
                               FontSize="14" 
                               Margin="0,0,0,5"/>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Автор:" 
                               FontSize="14" 
                               Margin="0,0,0,5"/>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding NewAuthor, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Рік видання:" 
                               FontSize="14" 
                               Margin="0,0,0,5"/>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding NewYear, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Статистика -->
                <Border Background="#f8f9fa" 
                        Padding="15" 
                        CornerRadius="8" 
                        BorderThickness="1" 
                        BorderBrush="#e9ecef">
                    <StackPanel>
                        <TextBlock Text="📊 Статистика" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding Books.Count, StringFormat='Загальна кількість книг: {0}'}" 
                                   FontSize="13"/>
                        <TextBlock Text="{Binding SelectedBook.Title, StringFormat='Обрана книга: {0}'}" 
                                   FontSize="13"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
</Grid>
</Window>