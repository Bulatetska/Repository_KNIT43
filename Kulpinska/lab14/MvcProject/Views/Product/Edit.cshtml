@model MvcLab.Models.Product

<h2>Редагувати продукт</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div>
        <label>Назва:</label>
        <input name="Name" value="@Model.Name" />
    </div>
    <div>
        <label>Ціна:</label>
        <input name="Price" value="@Model.Price" />
    </div>
    <button type="submit">Зберегти</button>
</form>