<Window x:Class="BookApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:BookApp.ViewModels"
        Title="Бібліотека"
        Height="400"
        Width="600">

    <Window.DataContext>
        <viewModels:BookViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding Books}"
                 SelectedItem="{Binding SelectedBook}"
                 DisplayMemberPath="Title"
                 Grid.Column="0"
                 Margin="5"/>

        <StackPanel Grid.Column="1"
                    Margin="10">
            <TextBlock Text="Назва:"
                       FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedBook.Title, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,10"/>

            <TextBlock Text="Автор:"
                       FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedBook.Author, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,10"/>

            <TextBlock Text="Рік:"
                       FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedBook.Year, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button Content="Додати книгу"
                        Command="{Binding AddCommand}"
                        Width="120"
                        Margin="5"/>
                <Button Content="Видалити книгу"
                        Command="{Binding DeleteCommand}"
                        Width="120"
                        Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
